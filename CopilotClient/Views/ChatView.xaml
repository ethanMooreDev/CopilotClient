<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CopilotClient.Views.ChatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CopilotClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:selectors="using:CopilotClient.Selectors"
    xmlns:converters="using:CopilotClient.Converters"
    x:Name="RootControl"
>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Resources/MessageTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:InverseBooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" />
        </ResourceDictionary>

    </UserControl.Resources>

    <Grid Background="#0B1120" Padding="16">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="260" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        
        <!-- CONVERSATION SIDEBAR -->
        <Grid 
            Grid.Column="0"
            Background="#020617"
            Padding="8,16,8,16"
        >
            <StackPanel>
                <TextBlock 
                    Text="Conversations"
                    FontSize="14"
                    FontWeight="SemiBold"
                    Foreground="#E5E7EB"
                    Margin="4,0,0,8"
                />
                <ListView 
                    ItemsSource="{Binding Conversations}"
                    SelectedItem="{Binding SelectedConversation, Mode=TwoWay}"
                    IsItemClickEnabled="False"
                    BorderThickness="0"
                    Background="Transparent"
                    Margin="0,8,0,0"
                >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid
                                PointerEntered="Grid_PointerEntered"    
                                PointerExited="Grid_PointerExited"
                                Background="Transparent"
                            >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Margin="4,4,4,4">
                                    <Grid>
                                        <!-- Normal view -->
                                        <TextBlock Text="{Binding Title}">
                                            <TextBlock.Visibility>
                                                <Binding 
                                                    Path="IsEditingTitle"
                                                    Converter="{StaticResource InverseBooleanToVisibilityConverter}"
                                                />
                                            </TextBlock.Visibility>
                                        </TextBlock>

                                        <!-- Edit view -->
                                        <TextBox
                                            Text="{Binding Title, Mode=TwoWay}"
                                            MinWidth="150"
                                            KeyDown="TitleTextBox_KeyDown"
                                            LostFocus="TitleTextBox_LostFocus"
                                        >     
                                            <TextBox.Visibility>
                                                <Binding 
                                                    Path="IsEditingTitle"
                                                    Converter="{StaticResource BooleanToVisibilityConverter}"
                                                />
                                            </TextBox.Visibility>
                                        </TextBox>
                                    </Grid>
                                    <TextBlock
                                        Text="{Binding Mode}"
                                        FontSize="11"
                                        Foreground="#9CA3AF"
                                        Margin="0,2,0,0"
                                    />
                                </StackPanel>
                                <Button
                                    Name="ListItemOptionButton"
                                    Grid.Column="1"
                                    Visibility="Collapsed"
                                    Padding="4"
                                    FontSize="8"
                                    Click="ListItemOptionButton_Click"
                                >
                                    <FlyoutBase.AttachedFlyout>
                                        <MenuFlyout Placement="RightEdgeAlignedTop" >
                                            <MenuFlyoutItem Text="Rename" Click="MenuFlyoutItemRename_Click" >
                                                <MenuFlyoutItem.Icon>
                                                    <SymbolIcon Symbol="Rename" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                            <MenuFlyoutItem Text="Delete" Click="MenuFlyoutItemDelete_Click" >
                                                <MenuFlyoutItem.Icon>
                                                    <SymbolIcon Symbol="Delete" />
                                                </MenuFlyoutItem.Icon>
                                            </MenuFlyoutItem>
                                        </MenuFlyout>
                                    </FlyoutBase.AttachedFlyout>
                                    <Viewbox MaxHeight="16" MaxWidth="16" >
                                        <SymbolIcon Symbol="More" />
                                    </Viewbox>
                                </Button>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackPanel>
        </Grid>
        
        <!-- CURRENT CONVERSATION -->
        <Grid
            Grid.Column="1"
            x:Name="ChatArea"
            DataContextChanged="ChatArea_DataContextChanged"
        >
            <Grid.DataContext>
                <Binding Path="SelectedConversation" />
            </Grid.DataContext>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid Grid.Row="0" Margin="0,0,0,8" Width="800">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Title + Subtitle -->
                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock 
                        Text="{Binding Title}"
                        FontSize="20"
                        FontWeight="SemiBold"
                        Foreground="White"
                    />
                </StackPanel>

                <!-- Right-side actions -->
                <StackPanel 
                    Grid.Column="1"
                    Orientation="Horizontal"
                    Spacing="8"
                    VerticalAlignment="Center"
                >
                    <!-- Mode selector -->
                    <ComboBox
                        Width="140"
                        ItemsSource="{Binding AvailableModes}"
                        SelectedItem="{Binding Mode, Mode=TwoWay}"
                    >
                        
                    </ComboBox>
                    <!-- New Chat Button -->
                    <Button>
                        <Button.Command>
                            <Binding
                                Path="DataContext.NewConversationCommand"
                                ElementName="RootControl"
                            />
                        </Button.Command>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <SymbolIcon Symbol="Add" />
                            <TextBlock Text="New chat" />
                        </StackPanel>
                    </Button>
                    <!-- Settings Button -->
                    <Button Command="{Binding OpenSettingsCommand}">
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <SymbolIcon Symbol="Setting" />
                            <TextBlock Text="Settings" />
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>

            <Rectangle Grid.Row="1" Height="1" Width="800" Fill="#1F2937" Margin="0,8,0,8" />

            <!-- Messages list -->
            <ScrollViewer Grid.Row="2" x:Name="MessageScrollViewer">
                <ItemsControl
                    x:Name="MessagesItemsControl"
                    ItemTemplateSelector="{StaticResource MessageTemplateSelector}"
                    ItemsSource="{Binding Messages}"
                    Width="800"
                >
                    <ItemsControl.ItemTemplate/>
                </ItemsControl>
            </ScrollViewer>

            <!-- Input row -->
            <Grid Grid.Row="3" Margin="0,12,0,0" Width="800">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBox 
                    Grid.Column="0"
                    Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    AcceptsReturn="False"
                    TextWrapping="Wrap"
                    MinHeight="40"
                    MaxHeight="100"
                    PlaceholderText="Ask something..."
                    Margin="0,0,8,0"
                    KeyDown="TextBox_KeyDown"
                />

                <Button 
                    Grid.Column="1"
                    Content="Send"
                    IsEnabled="{Binding SendEnabled, Mode=OneWay}"
                    Command="{Binding SendCommand}"
                    VerticalAlignment="Bottom"
                    Padding="16,8"
                />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
