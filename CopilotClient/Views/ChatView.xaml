<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CopilotClient.Views.ChatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CopilotClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:controls="using:CommunityToolkit.WinUI.UI.Controls"
    xmlns:selectors="using:CopilotClient.Selectors"
>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Resources/MessageTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>

    <Grid x:Name="RootGrid" Background="#0B1120" Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,8" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Title + Subtitle -->
            <StackPanel Orientation="Vertical" Grid.Column="0">
                <TextBlock 
                    Text="{Binding Title}"
                    FontSize="20"
                    FontWeight="SemiBold"
                    Foreground="White"
                />
            </StackPanel>

            <!-- Right-side actions -->
            <StackPanel 
                Grid.Column="1"
                Orientation="Horizontal"
                Spacing="8"
                VerticalAlignment="Center"
            >
                <Button Command="{Binding OpenSettingsCommand}">
                    <StackPanel Orientation="Horizontal" Spacing="4">
                        <SymbolIcon Symbol="Setting" />
                        <TextBlock Text="Settings" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </Grid>

        <Rectangle Grid.Row="1" Height="1" Width="800" Fill="#1F2937" Margin="0,8,0,8" />

        <!-- Messages list -->
        <ScrollViewer Grid.Row="2" x:Name="MessageScrollViewer">
            <ItemsControl
                x:Name="MessagesItemsControl"
                ItemTemplateSelector="{StaticResource MessageTemplateSelector}"
                ItemsSource="{Binding Messages}"
                Width="800"
            >
                <ItemsControl.ItemTemplate/>
            </ItemsControl>
        </ScrollViewer>

        <!-- Input row -->
        <Grid Grid.Row="3" Margin="0,12,0,0" Width="800">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox 
                Grid.Column="0"
                Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                AcceptsReturn="False"
                TextWrapping="Wrap"
                MinHeight="40"
                MaxHeight="100"
                PlaceholderText="Ask something..."
                Margin="0,0,8,0"
                KeyDown="TextBox_KeyDown"
            />

            <Button 
                Grid.Column="1"
                Content="Send"
                IsEnabled="{Binding SendEnabled, Mode=OneWay}"
                Command="{Binding SendCommand}"
                VerticalAlignment="Bottom"
                Padding="16,8"
            />
        </Grid>
    </Grid>
</UserControl>
