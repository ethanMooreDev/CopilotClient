<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="CopilotClient.Views.ChatView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CopilotClient.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:views="using:CopilotClient.Selectors"
>

    <UserControl.Resources>
        <!-- USER MESSAGE TEMPLATE -->
        <DataTemplate x:Key="UserMessageTemplate" >
            <StackPanel Margin="0,0,0,8">
                <Border 
                    Padding="8"
                    CornerRadius="8"
                    Background="#1f5191"
                    MaxWidth="800"
                    MinWidth="400"
                    HorizontalAlignment="Right"
                >
                    <TextBlock 
                        Text="{Binding Content}"
                        TextWrapping="Wrap"
                        Foreground="White"
                        HorizontalAlignment="Right"
                    />
                </Border>
            </StackPanel>
        </DataTemplate>
        <!-- ASSISTANT MESSAGE TEMPLATE -->
        <DataTemplate x:Key="AssistantMessageTemplate" >
            <StackPanel Margin="0,0,0,8">
                <Border 
                    Padding="8"
                    CornerRadius="8"
                    MaxWidth="800"
                    MinWidth="400"
                    HorizontalAlignment="Left"
                >
                    <TextBlock 
                        Text="{Binding Content}"
                        TextWrapping="Wrap"
                        Foreground="White"
                        HorizontalAlignment="Left"
                    />
                </Border>
            </StackPanel>
        </DataTemplate>
        <!-- TEMPLATE SELECTOR -->
        <views:MessageTemplateSelector x:Key="MessageTemplateSelector"
                                   UserTemplate="{StaticResource UserMessageTemplate}"
                                   AssistantTemplate="{StaticResource AssistantMessageTemplate}" />
    </UserControl.Resources>

    <Grid x:Name="RootGrid" Background="#0B1120" Padding="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Messages list -->
        <ScrollViewer Grid.Row="0" x:Name="MessageScrollViewer">
            <ItemsControl
                x:Name="MessagesItemsControl"
                ItemTemplateSelector="{StaticResource MessageTemplateSelector}"
                ItemsSource="{Binding Messages}"
            >
                <ItemsControl.ItemTemplate/>
            </ItemsControl>
        </ScrollViewer>

        <StackPanel 
            Grid.Row="1"
            Orientation="Horizontal"
            Visibility="{x:Bind BusyToVisibility(ViewModel.IsBusy), Mode=OneWay}"
        >
            <ProgressRing 
                Width="16"
                Height="16"
                IsActive="{x:Bind ViewModel.IsBusy, Mode=OneWay}" 
                Margin="0,0,8,0"
            />
            <TextBlock 
                Text="Copilot is thinking..."
                Foreground="#9CA3AF"
                VerticalAlignment="Center"
            />
        </StackPanel>

        <!-- Input row -->
        <Grid Grid.Row="2" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0"
                 Text="{Binding InputText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 MinHeight="40"
                 MaxHeight="100"
                 PlaceholderText="Ask something..."
                 Margin="0,0,8,0"
            />

            <Button Grid.Column="1"
                Content="Send"
                Command="{Binding SendCommand}"
                VerticalAlignment="Bottom"
                Padding="16,8"
            />
        </Grid>
    </Grid>
</UserControl>
