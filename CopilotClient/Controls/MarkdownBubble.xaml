<!-- MarkdownBubble.xaml -->
<UserControl
    x:Class="CopilotClient.Controls.MarkdownBubble"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:CopilotClient.Controls">

    <UserControl.Resources>
        <!-- Colors -->
        <SolidColorBrush x:Key="BubbleBackground" Color="#0B1120"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#C7D2FE"/>
        <SolidColorBrush x:Key="CodeBackground" Color="#111827"/>
        <SolidColorBrush x:Key="QuoteBorder" Color="#374151"/>
        <SolidColorBrush x:Key="QuoteForeground" Color="Gray"/>


        <!-- Text styles -->
        <Style x:Key="MdParagraph" TargetType="TextBlock">
            <Setter Property="TextWrapping" Value="Wrap"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="LineHeight" Value="20"/>
            <Setter Property="Margin" Value="0,2,0,10"/>
        </Style>

        <Style x:Key="MdHeading1" TargetType="TextBlock" BasedOn="{StaticResource MdParagraph}">
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>
        <Style x:Key="MdHeading2" TargetType="TextBlock" BasedOn="{StaticResource MdParagraph}">
            <Setter Property="FontSize" Value="19"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style x:Key="MdHeading3" TargetType="TextBlock" BasedOn="{StaticResource MdParagraph}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
        </Style>
    </UserControl.Resources>

    <Border Padding="8"
            CornerRadius="8"
            Background="{StaticResource BubbleBackground}"
            MaxWidth="800">
        <StackPanel x:Name="ContentPanel"
                    Orientation="Vertical"
                    Spacing="4"/>
    </Border>
</UserControl>