<!-- MarkdownBubble.xaml -->
<UserControl
    x:Class="CopilotClient.Controls.MarkdownBubble"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="CopilotClient:MyApp.Controls">

    <UserControl.Resources>
        <!-- Colors (dark chat bubble style) -->
        <SolidColorBrush x:Key="BubbleBackground" Color="#0B1120"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E5E7EB"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#C7D2FE"/>
        <SolidColorBrush x:Key="QuoteBorder" Color="#374151"/>
    </UserControl.Resources>

    <Border Padding="12"
            CornerRadius="10"
            Background="{StaticResource BubbleBackground}"
            MaxWidth="800">
        <!-- Single contiguous selection surface -->
        <RichTextBlock x:Name="MarkdownRichText"
                       IsTextSelectionEnabled="True"
                       TextWrapping="Wrap"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="14"
                       LineHeight="20"/>
    </Border>
</UserControl>